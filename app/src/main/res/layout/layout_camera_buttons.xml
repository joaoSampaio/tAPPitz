<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:visibility="visible"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_after_photo"
        android:alpha="1"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:alpha="0.5"></RelativeLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_layout"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:visibility="visible"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true">


            <Button
                android:text="back"
                android:textColor="@color/white"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:id="@+id/btnPhotoDelete" />


            <Button
                android:text="text"
                android:textColor="@color/white"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:id="@+id/btnText" />

            <Button
                android:text="next"
                android:textColor="@color/white"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:id="@+id/btnPhotoAccept" />

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textMsgWrapper"
            android:visibility="invisible"
            android:layout_width="match_parent"

            android:background="@color/background_material_light"
            android:alpha="0.8"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_above="@+id/btn_layout">

            <EditText
                android:id="@+id/textMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:maxLength="140"
                android:scrollHorizontally="false"
                android:imeOptions="actionDone"
                android:hint="Message"/>

        </android.support.design.widget.TextInputLayout>




    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_before_photo">




        <Button
            android:id="@+id/btn_shutter"
            android:text="Capture"
            android:background="@drawable/photo_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            style="@style/SelectBar"
            android:layout_alignParentBottom="false"
            android:layout_centerInParent="true" />


        <Button
            android:id="@+id/camera_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Camera"
            style="@style/SelectBar"
            android:background="#00000000"
            android:textSize="20sp"/>


        <!--<RelativeLayout-->
        <!--android:id="@+id/camera_options"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:layout_marginBottom="10dp">-->
        <!--<TextView-->
        <!--style="@style/SelectBar"-->
        <!--android:text="Camera"-->
        <!--android:id="@+id/textViewOut"-->
        <!--android:textSize="25sp" />-->
        <!--</RelativeLayout>-->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/camera_options"
            android:id="@+id/layout_camera"
            android:visibility="gone"
            android:layout_alignParentRight="true">

            <Button
                android:id="@+id/btn_load"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:text="Load"
                style="@style/SelectBar" />

            <Button
                android:id="@+id/btn_flash"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:text="@string/flash"
                style="@style/SelectBar" />

            <Button
                android:id="@+id/btn_toggle_camera"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:text="Turn"
                style="@style/SelectBar" />

        </LinearLayout>



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/action_goto_sent"
            android:src="@drawable/seta"
            android:rotation="180"
            android:layout_marginTop="70dp"
            android:layout_alignParentRight="true"

            android:layout_marginRight="10dp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/action_goto_qrcode"
            android:src="@drawable/qr_code"
            android:layout_alignParentRight="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/contacts"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/action_goto_contacts" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="10dp">



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/action_goto_received"

                android:src="@drawable/seta"
                />

            <TextView
                android:id="@+id/inbox_circle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle"
                android:text="10"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignParentLeft="false"
                android:gravity="center_vertical|center_horizontal"
                android:layout_toRightOf="@+id/btn_go_inbox"
                android:layout_centerVertical="true"
                android:visibility="gone" />

        </RelativeLayout>










    </RelativeLayout>




</RelativeLayout>