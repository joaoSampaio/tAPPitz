<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/foto"
        android:id="@+id/fotoEnviada"
        android:clickable="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/descricaoFoto"
        android:id="@+id/textoDescricaoFotoEnviada"
        android:inputType="textMultiLine"
        android:gravity="left"
        android:background="@color/sblue"
        android:textColor="@color/brown"
        android:layout_gravity="right|top"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/painelvotacao"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <Button
            android:text="0"
            android:textColor="@color/white"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/green_round_button"
            android:layout_marginRight="20dp"
            android:id="@+id/botaoVerde" />


        <Button
            android:text="0"
            android:textColor="@color/white"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/yellow_round_button"
            android:layout_marginRight="20dp"
            android:id="@+id/botaoAmarelo" />

        <Button
            android:text="0"
            android:textColor="@color/white"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/red_round_button"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/botaoVermelho" />

    </LinearLayout>


</RelativeLayout>