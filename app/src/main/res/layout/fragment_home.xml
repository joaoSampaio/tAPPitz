<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:background="@color/white">

    <SurfaceView
        android:id="@+id/surfaceview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/temp_pic"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:visibility="visible" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/whiteBackground"

        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:alpha="0.5"></RelativeLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_layout"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true">


            <Button
                android:text="back"
                android:textColor="@color/white"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:id="@+id/btnPhotoDelete" />


            <Button
                android:text="text"
                android:textColor="@color/white"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:id="@+id/btnText" />

            <Button
                android:text="next"
                android:textColor="@color/white"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:id="@+id/btnPhotoAccept" />

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textMsgWrapper"
            android:visibility="invisible"
            android:layout_width="match_parent"

            android:background="@color/background_material_light"
            android:alpha="0.8"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_above="@+id/btn_layout">

            <EditText
                android:id="@+id/textMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:scrollHorizontally="false"
                android:imeOptions="actionDone"
                android:hint="Message"/>

        </android.support.design.widget.TextInputLayout>




    </RelativeLayout>



    <Button
        android:id="@+id/btn_shutter"
        android:text="Capture"
        android:background="@drawable/botao_castanho"
        android:textColor="@color/texto_botao_castanho"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"/>





    <LinearLayout
        android:id="@+id/camera_options"
        style="@style/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="visible" >

        <ImageButton
            android:id="@+id/btn_load"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="33"
            android:src="@drawable/ic_camera_identification"
            android:background="@null"
            android:text="@string/load" />

        <Button
            android:id="@+id/btn_flash"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="33"
            android:background="@null"
            android:text="@string/flash"
            style="@style/SelectBar" />


        <ImageButton
            android:id="@+id/btn_toggle_camera"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="33"
            android:src="@drawable/ic_switch_camera"
            android:background="@null"
            android:text="@string/camera" />
    </LinearLayout>









</RelativeLayout>