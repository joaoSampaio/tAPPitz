    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_layout"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <Button
            android:text="back"
            android:textColor="@color/white"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/green_round_button"
            android:layout_marginRight="20dp"
            android:id="@+id/btnPhotoDelete" />


        <Button
            android:text="text"
            android:textColor="@color/white"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/yellow_round_button"
            android:layout_marginRight="20dp"
            android:id="@+id/btnText" />

        <Button
            android:text="next"
            android:textColor="@color/white"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/red_round_button"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/btnPhotoAccept" />

    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textMsgWrapper"
        android:visibility="invisible"
        android:layout_width="match_parent"

        android:background="@color/background_material_light"
        android:alpha="0.8"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <EditText
            android:id="@+id/textMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:hint="Message"/>

    </android.support.design.widget.TextInputLayout>




